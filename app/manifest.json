{
  "manifest_version": 2,
  "name": "gh-big-review",
  "version": "1.0.1",
  "description": "GitHub file diff to TODO List.",
  "browser_action": {
    "default_title": "TODO list!"
  },
  "icons": {
    "128": "icon/128.png"
  },
  "permissions": [
    "https://github.com/*/*/pull/*/files"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*/files"
      ],
      "run_at": "document_end",
      "js": [
        "scripts/main.js"
      ]
    }
  ]
}